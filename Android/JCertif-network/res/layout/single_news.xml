<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_cellule_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/cellule_news"
    android:orientation="horizontal"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="98dp"
        android:background="@drawable/bg_cellule_news"
        android:padding="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/app_name"
            android:background="@drawable/logo_nb"
            android:layout_margin="1dp" />

        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <ProgressBar
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateDrawable="@drawable/loading_progress" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <RelativeLayout
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:paddingLeft="5dp" >  

		<TextView
	            android:id="@+id/title_news"
	            style="HelveticaNeue-Bold"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:textColor="@color/blue"
	            android:textSize="13sp"
	            android:textStyle="bold|italic" />
	        
	        <TextView
	            android:id="@+id/publier"
	            style="HelveticaNeue"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:gravity="bottom|right"
	            android:textColor="@color/blue"
	            android:textSize="12sp"
	            android:textStyle="italic" 
	            android:layout_marginTop="2dp"/>
	    
	 </RelativeLayout>

</LinearLayout>